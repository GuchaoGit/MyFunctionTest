<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <!--透明Dialog-->
    <style name="TransDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/colorTrans</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <!--加载框样式-->
    <style name="LoadingDialog" parent="@style/TransDialog">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!--去除回弹效果-->
    <style name="NoFadingEdge">
        <item name="android:fadingEdge">none</item>
        <item name="android:fadingEdgeLength">0dp</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <!--分割线横向-->
    <style name="DivierH">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divier_h</item>
        <item name="android:background">@color/colorDivier</item>
    </style>

    <!--分割线竖向-->
    <style name="DivierV">
        <item name="android:layout_width">@dimen/divier_h</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorDivier</item>
    </style>

    <!--按钮-->
    <style name="Btn" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">@dimen/btn_w</item>
        <item name="android:layout_height">@dimen/btn_h</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_l</item>
    </style>
    <style name="BtnYellowRadius" parent="Btn">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/drasel_btn_yellowcon_radius</item>
    </style>

    <style name="BtnGrayFrameRadius" parent="Btn">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:background">@drawable/drasel_btn_divierfra_radius</item>
    </style>

    <style name="MyDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ActionSheetDialogStyle" parent="MyDialog">
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item>
    </style>
    <!-- ActionSheet进出动画 -->
    <style name="ActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_out</item>
    </style>
    <!--DialogFragment样式-->
    <style name="AppTheme.AppCompat.Dialog.Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowMinWidthMinor">80%</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:maxWidth">1080px</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--宽高设置：wrap -wrap -->
    <style name="Dimension_ww">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--宽高设置：match -wrap -->
    <style name="Dimension_mw">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ToolbarTitle" parent="Dimension_ww">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>
    <!--默认字体 颜色：黑色 字体：14sp-->
    <style name="StyleCommonText" parent="Dimension_ww">
        <item name="android:textColor">@color/colorBlackLight</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="StyleCommonText.bold" parent="StyleCommonText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StyleCommonText.White" parent="StyleCommonText">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="StyleCommonText.GrayDark" parent="StyleCommonText">
        <item name="android:textColor">@color/colorGrayDark</item>
    </style>

    <style name="StyleCommonText.Gray" parent="StyleCommonText">
        <item name="android:textColor">@color/colorGray</item>
    </style>
</resources>
