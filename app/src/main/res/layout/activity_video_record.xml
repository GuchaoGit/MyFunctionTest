<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ActivityVideoRecord">

    <com.guc.mylibrary.widgets.ToolBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftType="finish"
        app:title="录制视频" />

    <Button
        android:id="@+id/btn_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="录制视频" />

    <Button
        android:id="@+id/btn_face_identify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="人脸识别" />

    <ImageView
        android:id="@+id/iv_preview"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/tv_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/str_nul" />

    <Button
        android:id="@+id/btn_record2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="录制视频2" />

    <ImageView
        android:id="@+id/iv_preview2"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <Button
        android:id="@+id/btn_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下载一张图片" />

    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/download_hint" />

    <uk.co.senab.photoview.PhotoView
        android:id="@+id/iv_preview3"
        android:layout_width="100dp"
        android:layout_height="100dp" />
</LinearLayout>